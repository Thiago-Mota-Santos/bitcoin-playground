{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
     ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "printWidth": 80,
              "tabWidth": 2,
              "singleQuote": true,
              "trailingComma": "all",
              "arrowParens": "always",
              "semi": false
            }
          ]
    }
}
